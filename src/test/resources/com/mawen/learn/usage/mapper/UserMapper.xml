<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- @formatter:off -->
<mapper namespace="com.mawen.learn.usage.mapper.UserMapper">

    <resultMap id="defaultResultMap" type="com.mawen.learn.usage.entity.User">
        <id column="id" property="id"/>
        <result column="user_name" property="username"/>
        <result column="age" property="age"/>
    </resultMap>

    <select id="selectById" resultMap="defaultResultMap">
        select
            *
        from
            user
        where
            id = #{id}
    </select>

    <select id="selectByIdNonCached" resultMap="defaultResultMap" flushCache="true">
        select
            *
        from
            user
        where
            id = #{id}
    </select>



</mapper>